<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameTest.Menu.LevelSelection"
             Title="LevelSelection">
    <VerticalStackLayout>
        <Frame>
            <StackLayout BackgroundColor="Transparent">
                <Button x:Name="Intro" Pressed="Loader_Pressed" Text="Introduction"/>
                <Button x:Name="level1" Pressed="Loader_Pressed" Text="Level 1-1"/>
            </StackLayout>
        </Frame>
        <Frame>
            <HorizontalStackLayout>
                <Button Pressed="Editor_Pressed" Text="LevelEditor"/>
            </HorizontalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>