<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GameTest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GameTest"
    xmlns:Menu="clr-namespace:GameTest.Menu"
    xmlns:Levels="clr-namespace:GameTest.Levels"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="MainMenu"
        ContentTemplate="{DataTemplate Menu:MainMenu}"
        Route="MainPage" />
    <ShellContent
        Title="LevelPicker"
        ContentTemplate="{DataTemplate Menu:LevelSelection}"
        Route="LevelPicker" />
    <ShellContent
        Title="LevelLoader"
        ContentTemplate="{DataTemplate Levels:LevelLoader}"
        Route="LevelLoader"/>
    <ShellContent
        Title="LevelEditor"
        ContentTemplate="{DataTemplate Levels:LevelEditor}"
        Route="LevelEditor"/>

</Shell>
