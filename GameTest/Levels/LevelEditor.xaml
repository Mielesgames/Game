<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameTest.Levels.LevelEditor"
             Title="LevelEditor">
    <VerticalStackLayout>
        <ScrollView VerticalScrollBarVisibility="Always" HorizontalScrollBarVisibility="Always" IsClippedToBounds="False" MaximumHeightRequest="150" MaximumWidthRequest="500">
            <StackLayout>
                <Grid x:Name="Map"/>
            </StackLayout>
        </ScrollView>
        <ScrollView>
            <HorizontalStackLayout x:Name="Materials" HorizontalOptions="Center">
                <Button x:Name="Grass" HeightRequest="50"/>
                <Button x:Name="Stone"/>
                <Button x:Name="Stone_Wall"/>
                <Button x:Name="Water"/>
                <Button x:Name="Spawn"/>
                <Button x:Name="Void"/>
            </HorizontalStackLayout>
        </ScrollView>
        <Button Text="Return to menu" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>